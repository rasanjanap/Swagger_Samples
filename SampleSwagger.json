
{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "FHIR OpenMRS APIs",
    "description": "Sample for demonstrate OpenMRS FHIR APIs",
    "termsOfService": "http://swagger.io/terms/"
  },
  "host": "localhost",
  "basePath": "/openmrs/ws/fhir/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/Patient": {
      "post": {
        "description": "Creates a new new patient",
        "operationId": "create new patient",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "Patient",
            "in": "body",
            "description": "Add patient to the OpenMRS",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "FHIR server response",
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    },
    "/Patient/{id}": {
      "get": {
        "description": "Returns a Patient based on a single ID",
        "operationId": "findPatientById",
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of patient to fetch",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "FHIR response",
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      },
      "delete": {
        "description": "deletes a single Patient based on the ID supplied",
        "operationId": "deletePatient",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of Patient to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "Patient deleted"
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Patient": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/Patient"
        },
        {
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      ]
    },
    "Patient": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string"
        }
      }
    },
    "ErrorModel": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}